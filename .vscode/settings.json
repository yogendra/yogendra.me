{
  "files.trimTrailingWhitespace": true,
  "files.exclude": {
    "**/.git": true,
    "**/.svn": true,
    "**/.hg": true,
    "**/CVS": true,
    "**/.DS_Store": true,
    ".deploy_git": true,
    ".deploy_firebase": true,
    "node_modules": true
  },
  "editor.wordWrap": "bounded",
  "[markdown]": {
    "editor.wordWrap": "off",
    "editor.quickSuggestions": true
  },
  "editor.wordWrapColumn": 300,
  "files.associations": {
    "*.html": "jekyll"
  }
}
